{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "cypress",
      "node",
      "cypress-firebase"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "node_modules/cypress",
    "cypress/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "src/**"
  ]
}
